{% extends 'base.html.twig' %}

{% form_theme formView 'bootstrap_5_layout.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container w-auto">
        <h1>Connexion</h1>
        {% for label, messages in app.flashes (['error','success'])%}
            {% for message in messages %}
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            <div class="alert-message">
                <div class="flash-{{ label }} ">
                    {{ message }}
                </div>
            </div>
        </div>
            {% endfor %}
        {% endfor %}
            {{ form_start(formView) }}
            {{ form_row(formView.email) }}
            {{ form_row(formView.password) }}

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button type="submit" class="'btn btn-primary">Connexion</button>

            {{ form_end(formView) }}
        <div class="d-flex flex-column align-items-end m-50">
            <a href="{{ path('app_forgot_password_request')}}" class="nav-link text-success">Mot de passe oubli√©</a>
        </div>
    </div>

{% endblock %}
