{% extends 'base.html.twig' %}

{% form_theme requestForm 'bootstrap_5_layout.html.twig' %}

{% block title %}
    {%  if app.user %}
        <h1>Changement de mot de passe</h1>
    {% else %}
        <h1>Mot de passe oublié</h1>
    {% endif %}
{% endblock %}

{% block body %}
    <div class="container-xl px-4 mt-4">
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    {%  if app.user %}
        <nav class="nav nav-borders">
            <a class="nav-link active ms-0" href="{{ path('user_profile',{'id': app.user.id})}}" >Mon profil</a>
            <a class="nav-link" href="{{ path('app_forgot_password_request')}}">Sécurité</a>
        </nav>
        <hr class="mt-0 mb-4">
    <h1>Changement de mot de passe</h1>
    {% else %}
        <h1>Mot de passe oublié</h1>
    {% endif %}

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre adresse e-mail et nous vous enverrons un lien pour changer votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">Envoyer l'email</button>
    {{ form_end(requestForm) }}
</div>
{% endblock %}
